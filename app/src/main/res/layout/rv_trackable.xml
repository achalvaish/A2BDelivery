<?xml version="1.0" encoding="utf-8"?>

<com.del.a2b.recyclesample.view.TrackableRow android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/activity_trackable"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/food_truck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLayout"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/truck_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/truck_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#555" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/category_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:theme="@style/PrimaryFlatButton" />

                <Button
                    android:id="@+id/add_tracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Tracking"
                    android:textColor="@color/colorAccent"
                    android:theme="@style/PrimaryFlatButton" />
            </LinearLayout>

        </LinearLayout>
    </com.del.a2b.recyclesample.view.TrackableRow>